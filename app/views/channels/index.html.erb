<h1 class="title is-2">Kategorijos</h1>

<% if current_user.admin? %>
<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'Nauja kategorija', new_channel_path, class:'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Kategorija</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @channels.each do |channel| %>
    <tr>
      <td><%= link_to channel.channel, channel %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'Perziureti kategorija', channel, class:'button' %>
          <%= link_to 'Redaguoti kategorija', edit_channel_path(channel), class:'button' %>
          <%= link_to 'Pasalinti', channel, class:'button is-danger', method: :delete, data: { confirm: "Ar tikrai norite pasalinti pasirinkta kategorija? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<% else %>
 <p class="has-text-center">Atsiprasome! Jus neturite galimybes pasiekti sito puslapio.</p>
<% end %>